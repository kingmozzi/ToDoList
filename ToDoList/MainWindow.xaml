<Window x:Class="ToDoList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoList"
        mc:Ignorable="d"
        Title="MainWindow" Height="360" Width="360">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Name="btnAdd" Grid.Column="0" Width="40" HorizontalAlignment="Left" Background="Transparent" Content="+" 
                    FontSize="20" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Click="btnAdd_Click"/>
            <Button Name="btnCalendar" Grid.Column="0" Width="40" HorizontalAlignment="Left" Background="Transparent" Content="+" 
                    FontSize="20" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Click="btnCalendar_Click"/>
            <Button Name="btnExit" Grid.Column="8" Width="40" HorizontalAlignment="Right" Background="Transparent" Content="x" 
                    FontSize="20" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Click="btnExit_Click"/>

        </Grid>

        <Grid Grid.Row="1">
            <StackPanel>
                
            </StackPanel>
        </Grid>

    </Grid>
</Window>
